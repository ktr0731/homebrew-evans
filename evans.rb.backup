class Evans < Formula
  desc "Evans: more expressive universal gRPC client"
  homepage "https://github.com/ktr0731/evans"

  if Hardware::CPU.is_64_bit?
    url "https://github.com/ktr0731/evans/releases/download/VERSION/evans_darwin_amd64.tar.gz"
    sha256 "SHA256_AMD64"
  else
    url "https://github.com/ktr0731/evans/releases/download/VERSION/evans_darwin_386.tar.gz"
    sha256 "SHA256_386"
  end

  def install
    bin.install "evans"
  end
end
